<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/ask_tt">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/Properties"
                android:id="@+id/verbs_prop"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="21dp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#525386">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/verbs_prop"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/relativeLayout6">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:id="@+id/verbs_name"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:textColor="#ffffff" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:id="@+id/verbs_trans"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/verbs_name"
                        android:layout_marginRight="10dp"
                        android:textColor="#ffffff" />


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:id="@+id/verb_root"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/verbs_trans"
                        android:layout_marginRight="10dp"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:id="@+id/verbs_type"
                        android:textSize="20dp"
                        android:gravity="center_vertical"

                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/verb_root"
                        android:layout_marginRight="10dp"
                        android:textColor="#ffffff" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:id="@+id/verbs_form"
                        android:textSize="20dp"
                        android:gravity="center_vertical"

                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/verbs_type"
                        android:layout_marginRight="10dp"
                        android:textColor="#ffffff" />


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/verbs_conj"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/verbs_form"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:textColor="#ffffff" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:id="@+id/verbs_conj2"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_below="@+id/verbs_conj"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:textColor="#ffffff" />

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="45dp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/cancel"
                android:id="@+id/butt_cancel"
                android:layout_below="@+id/verbs_conj2"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ask_button"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>